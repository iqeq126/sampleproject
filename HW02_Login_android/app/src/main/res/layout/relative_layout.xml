<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="warm_white">
    <TextView
        android:id="@+id/login_header"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/login_header"
        android:textSize="25sp"
        android:background="@color/purple_5"
        android:textColor="@color/warm_white" />
    <ImageView
        android:id="@+id/koreatech_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/koreatech_symbol"
        android:layout_marginTop="@string/image_margin"
        android:layout_marginBottom="@string/image_margin"
        android:layout_below="@id/login_header"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:id="@+id/login_id"
        android:layout_width="@string/input_width"
        android:layout_height="@string/input_height"
        android:layout_centerInParent="true"
        android:layout_below="@+id/koreatech_symbol"
        android:hint="@+string/login_id"/>

    <EditText
        android:id="@+id/login_password"
        android:layout_width="@string/input_width"
        android:layout_height="@string/input_height"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_below="@+id/login_id"
        android:inputType="textPassword"
        android:hint="@string/login_password"/>
    <Button
        android:id="@+id/login_submit"
        android:layout_width="@string/input_width"
        android:layout_height="@string/input_height"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/login_password"
        android:text="@string/login_submit"/>
    <TextView
        android:id="@+id/find_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24sp"
        android:text="@string/find_password"
        android:layout_alignStart="@id/login_submit"
        android:layout_below="@id/login_submit"
        />
    <TextView
        android:id="@+id/sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/sign_up"
        android:layout_alignBottom="@id/find_password"
        android:layout_alignRight="@id/login_submit"
        android:textSize="24sp"/>
</RelativeLayout>