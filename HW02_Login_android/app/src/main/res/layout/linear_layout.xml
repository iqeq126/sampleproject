<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10"
    android:background="@color/warm_white"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/login_header"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/login_header"
        android:textSize="25sp"
        android:background="@color/purple_5"
        android:textColor="@color/warm_white" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@string/image_margin"
        android:layout_marginBottom="@string/image_margin"
        android:src="@drawable/koreatech_symbol"
        />
    <EditText
        android:id="@+id/login_id"
        android:hint="@string/login_id"
        android:layout_gravity="center"
        android:layout_width="@string/input_width"
        android:layout_height="@string/input_height"/>
    <EditText
        android:id="@+id/login_password"
        android:hint="@string/login_password"
        android:layout_gravity="center"
        android:layout_width="@string/input_width"
        android:layout_height="@string/input_height"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal">
    </LinearLayout>
    <Button
        android:id="@+id/login_submit"
        android:layout_width="@string/input_width"
        android:layout_height="@string/input_height"
        android:layout_gravity="center"
        android:text="@string/login_submit"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:weightSum="1">
        <TextView
            android:id="@+id/find_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="24sp"
            android:text="@string/find_password"
            android:layout_weight="0.5"/>
        <TextView
            android:id="@+id/sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="24sp"
            android:text="@string/sign_up"
            android:layout_weight="0.5"/>
    </LinearLayout>
</LinearLayout>